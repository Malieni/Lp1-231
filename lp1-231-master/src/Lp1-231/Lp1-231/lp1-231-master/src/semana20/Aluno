import java.util.Scanner;

public class Aluno {
    private int id;
    private String nome;
    private String email;
    private boolean ativo;

    
    public Aluno(int id, String nome, String email, boolean ativo) {
        this.id = id;
        this.nome = nome;
        this.email = email;
        this.ativo = ativo;
    }

    

    @Override
    public String toString() {
        return "Aluno [id=" + id + ", nome=" + nome + ", email=" + email + ", ativo=" + ativo + "]";
    }
}

public class BuscarAlunoPorId {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Digite o ID do aluno: ");
        int idProcurado = scanner.nextInt();

      
    }
}

public class BuscarAlunoPorNome {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Digite o nome do aluno: ");
        String nomeProcurado = scanner.nextLine();

      
    }
}

